<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    tools:context=".actividades.RadioButtonActivity">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/_rbtnClubFutbol_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F40A0A"
            android:buttonTint="@color/purple_700"
            android:onClick="rbtnClubFutbolClick"
            android:text="Manchester Utd"
            android:textColor="#FFEB3B"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/_rbtnClubFutbol_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:buttonTint="@color/purple_700"
            android:onClick="rbtnClubFutbolClick"
            android:text="Real Madrid"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/_rbtnClubFutbol_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2DFFCE"
            android:buttonTint="@color/purple_700"
            android:onClick="rbtnClubFutbolClick"
            android:text="Manchester City"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="monospace"
        android:text="Seleccione su equipo favorito:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="126dp"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"
        android:onClick="btnEnviarClick"
        android:text="Enviar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />
</androidx.constraintlayout.widget.ConstraintLayout>